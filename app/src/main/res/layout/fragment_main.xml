<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:gravity="center_horizontal" >

    <ImageButton
        android:id="@+id/home_cover"
        android:layout_width="@dimen/home_cover_width"
        android:layout_height="@dimen/home_cover_height"
        android:layout_marginTop="@dimen/home_cover_margin_top"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/home_cover"
        android:contentDescription="@string/home_cover"
        android:elevation="2dp"/>

    <Button
        android:id="@+id/home_magazine_archive"
        android:text="@string/home_magazine_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/home_button_font_size"
        android:layout_below="@+id/home_cover"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/home_categories"
        android:text="@string/home_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/home_button_font_size"
        android:layout_below="@+id/home_magazine_archive"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/home_login"
        android:text="@string/home_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/home_button_font_size"
        android:layout_below="@id/home_categories"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>

</RelativeLayout>
